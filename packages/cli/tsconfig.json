{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/*.test.ts"],
  "references": [
    { "path": "../Types" },
    { "path": "../core" }
  ]
}
