{
  "name": "@bddai/core",
  "version": "0.1.0",
  "description": "Core BDD-AI Pair framework functionality",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./scenarios": {
      "types": "./dist/scenarios/index.d.ts",
      "import": "./dist/scenarios/index.js"
    },
    "./agents": {
      "types": "./dist/agents/index.d.ts",
      "import": "./dist/agents/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./documentation": {
      "types": "./dist/documentation/index.d.ts",
      "import": "./dist/documentation/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@bddai/types": "workspace:*",
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/gherkin": "^27.0.0",
    "@cucumber/messages": "^25.0.0",
    "zod": "^3.22.0",
    "yaml": "^2.3.0",
    "lodash-es": "^4.17.21",
    "glob": "^10.3.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.0",
    "vitest": "^1.0.0"
  }
}
